{
  "name": "sc-micro-enterprise-system",
  "version": "1.0.0",
  "description": "Full-stack MERN application for enterprise work request management, customer relationship tracking, and project analytics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build",

    "seed": "node seed-data.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "mern-stack",
    "enterprise",
    "dashboard",
    "work-requests",
    "customer-management",
    "project-tracking",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "fullstack",
    "business-intelligence",
    "csv-import",
    "analytics"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fender70/sc-micro-app"
  },
  "bugs": {
    "url": "https://github.com/fender70/sc-micro-app/issues"
  },
  "homepage": "https://github.com/fender70/sc-micro-app/blob/main/README.md",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
